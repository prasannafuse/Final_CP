<%- include('../../partials/header') %>

<div class="container">
    <h1 class="mb-4">Our Services</h1>
    
    <%- include('../../partials/messages') %>
    
    <div class="row gy-4">
        <% if(services && services.length > 0) { %>
            <% services.forEach(service => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100">
                        <img src="<%= service.image %>" class="card-img-top service-img" alt="<%= service.name %>">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= service.name %></h5>
                            <p class="card-text flex-grow-1"><%= service.description.substring(0, 120) %>...</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold fs-5 text-primary">â‚¹<%= service.price %></span>
                                <a href="/services/<%= service._id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info">No services available at the moment.</div>
            </div>
        <% } %>
    </div>
</div>

