<%- include('../../partials/header') %>

<div class="container">
    <%- include('../../partials/messages') %>
    
    <div class="row mb-5">
        <!-- Service Image -->
        <div class="col-md-6 mb-4">
            <img src="<%= service.image %>" alt="<%= service.name %>" class="img-fluid rounded shadow">
        </div>
        
        <!-- Service Details -->
        <div class="col-md-6">
            <h1 class="mb-3"><%= service.name %></h1>
            <p class="lead"><%= service.description %></p>
            
            <div class="d-flex align-items-center mb-4">
                <span class="fs-3 fw-bold text-primary me-3">â‚¹<%= service.price %></span>
                <span class="text-muted">per service</span>
            </div>
            
            <% if(locals.user) { %>
                <a href="/bookings/create/<%= service._id %>" class="btn btn-primary btn-lg">Book This Service</a>
            <% } else { %>
                <div class="alert alert-info">
                    <p class="mb-2">Please login to book this service</p>
                    <a href="/auth/login" class="btn btn-outline-primary">Login</a>
                    <a href="/auth/register" class="btn btn-outline-secondary ms-2">Register</a>
                </div>
            <% } %>
        </div>
    </div>
    
    <!-- Service Features -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="mb-4">What's Included</h3>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="d-flex">
                        <i class="bi bi-check-circle-fill text-success fs-4 me-2"></i>
                        <div>
                            <h5>Professional Service</h5>
                            <p>Our experts are highly trained and certified professionals.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex">
                        <i class="bi bi-tools text-primary fs-4 me-2"></i>
                        <div>
                            <h5>Quality Equipment</h5>
                            <p>We use high-quality tools and equipment for every job.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex">
                        <i class="bi bi-shield-check text-warning fs-4 me-2"></i>
                        <div>
                            <h5>Satisfaction Guarantee</h5>
                            <p>We ensure complete satisfaction with our service.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- How It Works -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="mb-4">How It Works</h3>
            <div class="row">
                <div class="col-md-4 text-center mb-3">
                    <div class="p-3 border rounded mb-3">
                        <i class="bi bi-calendar-check fs-1 text-primary"></i>
                    </div>
                    <h5>Book An Appointment</h5>
                    <p>Choose a convenient date and time for your service.</p>
                </div>
                <div class="col-md-4 text-center mb-3">
                    <div class="p-3 border rounded mb-3">
                        <i class="bi bi-person-check fs-1 text-primary"></i>
                    </div>
                    <h5>Professional Arrives</h5>
                    <p>Our expert arrives at your location on the scheduled time.</p>
                </div>
                <div class="col-md-4 text-center mb-3">
                    <div class="p-3 border rounded mb-3">
                        <i class="bi bi-hand-thumbs-up fs-1 text-primary"></i>
                    </div>
                    <h5>Job Well Done</h5>
                    <p>The service is completed to your satisfaction.</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Related Services -->
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">Other Services You Might Like</h3>
            <div class="row">
                <!-- This would typically be populated with related services from your database -->
                <div class="col-12">
                    <a href="/services" class="btn btn-outline-primary">View All Services</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>