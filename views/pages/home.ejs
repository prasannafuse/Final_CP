<%- include('../partials/header') %>

<%- include('../partials/messages') %>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Professional Home Services at Your Doorstep</h1>
        <p class="lead">Find reliable professionals for all your home service needs</p>
        <a href="/services" class="btn btn-primary btn-lg">View All Services</a>
    </div>
</section>

<!-- Services Section -->
<section class="container mt-5">
    <div class="text-center mb-4">
        <h2>Our Services</h2>
        <p>Choose from a variety of home services</p>
    </div>
    
    <div class="row gy-4">
        <% if(services && services.length > 0) { %>
            <% services.forEach(service => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card service-card">
                        <img src="<%= service.image %>" class="card-img-top service-img" alt="<%= service.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= service.name %></h5>
                            <p class="card-text"><%= service.description.substring(0, 100) %>...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">â‚¹<%= service.price %></span>
                                <a href="/services/<%= service._id %>" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info">No services available at the moment.</div>
            </div>
        <% } %>
    </div>
    
    <div class="text-center mt-4">
        <a href="/services" class="btn btn-outline-dark">View All Services</a>
    </div>
</section>

<!-- Features Section -->
<section class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <i class="bi bi-check-circle fs-1 text-success"></i>
                <h3>Professional Experts</h3>
                <p>Our professionals are verified and highly skilled in their respective fields.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <i class="bi bi-clock fs-1 text-primary"></i>
                <h3>Timely Service</h3>
                <p>We value your time and ensure our services are delivered promptly.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <i class="bi bi-shield-check fs-1 text-warning"></i>
                <h3>Guaranteed Satisfaction</h3>
                <p>All our services come with a satisfaction guarantee for your peace of mind.</p>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %> 